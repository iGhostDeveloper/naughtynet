        function getRandomCPALink() {
            return cpaLinks[Math.floor(Math.random() * cpaLinks.length)];
        }

        function redirectToOffer() {
            window.open(getRandomCPALink(), '_blank');
        }

        // Main countdown timer
        let mainTimeLeft = 300; // 5 minutes
        const mainCountdownElement = document.getElementById('mainCountdown');
        
        function updateMainTimer() {
            if (mainCountdownElement) {
                const minutes = Math.floor(mainTimeLeft / 60);
                const seconds = mainTimeLeft % 60;
                mainCountdownElement.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            }
            
            if (mainTimeLeft > 0) {
                mainTimeLeft--;
            } else {
                mainTimeLeft = 300; // Reset
            }
        }
        
        setInterval(updateMainTimer, 1000);

        // Scarcity indicators
        function updateScarcity() {
            const spotsLeft = document.getElementById('spotsLeft');
            const peopleWaiting = document.getElementById('peopleWaiting');
            
            if (spotsLeft) {
                let current = parseInt(spotsLeft.textContent);
                if (current > 1 && Math.random() < 0.3) {
                    spotsLeft.textContent = current - 1;
                }
            }
            
            if (peopleWaiting) {
                let current = parseInt(peopleWaiting.textContent);
                let change = Math.floor(Math.random() * 5) - 2; // -2 to +2
                peopleWaiting.textContent = Math.max(15, current + change);
            }
        }
        
        setInterval(updateScarcity, 10000); // Update every 10 seconds

        // Exit intent detection
        let exitIntentShown = false;
        
        function showExitIntent() {
            if (!exitIntentShown) {
                document.getElementById('exitModal').style.display = 'flex';
                exitIntentShown = true;
            }
        }
        
        function closeModal() {
            document.getElementById('exitModal').style.display = 'none';
        }
        
        // Mouse leave detection
        document.addEventListener('mouseleave', function(e) {
            if (e.clientY <= 0) {
                showExitIntent();
            }
        });
        
        // Mobile scroll up detection
        let lastScrollTop = 0;
        window.addEventListener('scroll', function() {
            let scrollTop = window.pageYOffset || document.documentElement.scrollTop;
            if (scrollTop < lastScrollTop && scrollTop < 100) {
                showExitIntent();
            }
            lastScrollTop = scrollTop;
        });

        // Auto-show modal after 30 seconds
        setTimeout(showExitIntent, 30000);

        // Prevent multiple redirects
        let redirected = false;
        
        function redirectToOffer() {
            if (!redirected) {
                redirected = true;
                window.open(getRandomCPALink(), '_blank');
                closeModal();
            }
        }

        // User agent detection for cloaking
